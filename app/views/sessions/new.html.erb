<section class="mx-auto max-w-xl rounded-3xl border border-slate-200 bg-white/80 p-8 shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800/70">
  <p class="text-xs uppercase tracking-[0.2em] text-amber-700 dark:text-amber-500">Admin access</p>
  <h1 class="mt-2 text-3xl font-semibold text-slate-900 dark:text-slate-50">Sign in</h1>
  <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">Solo usuarios autorizados pueden administrar el contenido.</p>

  <%= form_with url: login_path, class: "mt-6 space-y-6" do |form| %>
    <div>
      <%= form.label :email, class: "text-xs font-semibold uppercase tracking-[0.2em] text-slate-500 dark:text-slate-200" %>
      <%= form.email_field :email, class: "mt-2 w-full rounded-2xl border border-slate-200 px-4 py-3 text-sm focus:border-amber-400 focus:outline-none dark:border-slate-700 dark:bg-slate-900 dark:text-slate-50 dark:focus:border-amber-500" %>
    </div>
    <div>
      <%= form.label :password, class: "text-xs font-semibold uppercase tracking-[0.2em] text-slate-500 dark:text-slate-200" %>
      <%= form.password_field :password, class: "mt-2 w-full rounded-2xl border border-slate-200 px-4 py-3 text-sm focus:border-amber-400 focus:outline-none dark:border-slate-700 dark:bg-slate-900 dark:text-slate-50 dark:focus:border-amber-500" %>
    </div>
    <%= form.submit "Login", class: "rounded-full bg-amber-600 px-6 py-2 text-sm font-semibold text-white transition hover:bg-amber-700" %>
  <% end %>
</section>
