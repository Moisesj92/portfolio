<section class="rounded-2xl md:rounded-3xl border border-slate-200 bg-white/80 p-6 md:p-8 lg:p-10 shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800/70">
  <div class="flex flex-wrap items-center justify-between gap-4">
    <div>
      <p class="text-xs uppercase tracking-[0.2em] text-emerald-700 dark:text-emerald-400">Preview</p>
      <h1 class="mt-2 text-2xl md:text-3xl lg:text-4xl font-semibold text-slate-900 leading-tight dark:text-slate-50"><%= @post.title %></h1>
      <p class="mt-2 text-xs text-slate-500 dark:text-slate-300">
        <%= @post.category.name %> Â· <%= @post.status.titleize %>
      </p>
    </div>
    <div class="flex items-center gap-2 text-sm">
      <%= link_to "Edit", edit_admin_post_path(@post), class: "rounded-full border border-slate-200 px-3 py-1.5 text-slate-700 transition hover:border-slate-300 hover:bg-slate-100 dark:border-slate-700 dark:text-slate-300 dark:hover:border-slate-600 dark:hover:bg-slate-800" %>
      <%= link_to "Back", admin_posts_path, class: "rounded-full border border-slate-200 px-3 py-1.5 text-slate-700 transition hover:border-slate-300 hover:bg-slate-100 dark:border-slate-700 dark:text-slate-300 dark:hover:border-slate-600 dark:hover:bg-slate-800" %>
    </div>
  </div>

  <div class="mt-4 md:mt-6 text-xs text-slate-500 dark:text-slate-300">
    Publicado: <%= @post.published_at ? @post.published_at.strftime("%d %b %Y") : "-" %>
  </div>

  <div class="mt-6 md:mt-8 space-y-4 font-serif text-base md:text-lg leading-relaxed text-slate-700 max-w-none prose prose-slate dark:prose-invert dark:text-slate-50">
    <%= simple_format(@post.body) %>
  </div>
</section>
