<section class="flex flex-wrap items-center justify-between gap-3 sm:gap-4">
  <div>
    <p class="text-xs uppercase tracking-[0.2em] text-emerald-700 dark:text-emerald-500">AdministraciÃ³n</p>
    <h1 class="mt-2 text-2xl sm:text-3xl font-semibold text-slate-900 dark:text-slate-50">Posts</h1>
  </div>
  <%= link_to new_admin_post_path, class: "rounded-full bg-emerald-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-emerald-700 shadow-sm hover:shadow whitespace-nowrap" do %>
    <span class="hidden sm:inline">New post</span>
    <span class="sm:hidden">+ Post</span>
  <% end %>
</section>

<div class="mt-6 sm:mt-8 grid gap-3 sm:gap-4">
  <% @posts.each do |post| %>
    <% badge_class = post.published? ? "bg-emerald-100 text-emerald-800" : "bg-amber-100 text-amber-800" %>
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-4 rounded-xl sm:rounded-2xl border border-slate-200 bg-white/80 p-4 sm:px-5 sm:py-4 shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800/70">
      <div class="flex-1 min-w-0">
        <div class="flex items-center gap-2 text-xs text-slate-500 dark:text-slate-300 flex-wrap">
          <span class="rounded-full px-2.5 py-1 <%= badge_class %> font-medium dark:bg-opacity-30" title="<%= post.status.titleize %>"><%= post.status.titleize %></span>
          <span class="rounded-full border border-slate-200 px-2.5 py-1 dark:border-slate-700"><%= post.category.name %></span>
        </div>
        <h2 class="mt-2 text-base sm:text-lg font-semibold text-slate-900 break-words dark:text-slate-50"><%= post.title %></h2>
        <p class="mt-1 text-xs text-slate-500 dark:text-slate-300">
          Publicado: <%= post.published_at ? post.published_at.strftime("%d %b %Y") : "-" %>
        </p>
      </div>
      <div class="flex items-center gap-2 text-xs sm:text-sm flex-wrap">
        <%= link_to "Ver", admin_post_path(post), class: "rounded-full border border-slate-200 px-3 py-1.5 text-slate-700 hover:border-slate-300 hover:bg-slate-50 whitespace-nowrap dark:border-slate-700 dark:text-slate-300 dark:hover:border-slate-600 dark:hover:bg-slate-700" %>
        <%= link_to "Editar", edit_admin_post_path(post), class: "rounded-full border border-slate-200 px-3 py-1.5 text-slate-700 hover:border-slate-300 hover:bg-slate-50 whitespace-nowrap dark:border-slate-700 dark:text-slate-300 dark:hover:border-slate-600 dark:hover:bg-slate-700" %>
        <%= button_to "Borrar", admin_post_path(post), method: :delete, data: { turbo_confirm: "Â¿Eliminar este post?" }, class: "rounded-full border border-rose-200 px-3 py-1.5 text-rose-700 hover:border-rose-300 hover:bg-rose-50 whitespace-nowrap dark:border-rose-900 dark:text-rose-400 dark:hover:border-rose-700 dark:hover:bg-rose-900/30" %>
      </div>
    </div>
  <% end %>

  <% if @posts.empty? %>
    <div class="rounded-xl sm:rounded-2xl border border-dashed border-slate-300 bg-white/60 px-5 py-8 sm:py-10 text-center text-sm text-slate-500 dark:border-slate-700 dark:bg-slate-800/40 dark:text-slate-300">
      <div class="text-3xl mb-3">ğŸ“</div>
      <p>No hay posts aÃºn. Crea el primero.</p>
    </div>
  <% end %>
</div>

