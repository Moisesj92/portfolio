<div class="mx-auto md:w-2/3 w-full">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <% if user_signed_in? %>
      <div class="flex justify-between">
        <%= link_to 'Edit this post', edit_post_path(@post), class: "rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium" %>
        <%= button_to 'Destroy this post', post_path(@post), method: :delete, class: "rounded-lg py-2 px-4 bg-gray-100 font-medium" %>
        <%= link_to 'Back to posts', posts_path, class: "rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium" %>
      </div>
    <% end %>
    
    <%= render @post %>

  </div>
</div>
